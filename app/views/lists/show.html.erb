<div class="container">
  <h2>
    <%= @list.name %>
  </h2>

  <%= link_to 'Edit', edit_list_path(@list) %> |
  <%= link_to 'Back', lists_path %>

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>Title</th>
        <th>Completed</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @list.items.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.completed %></td>
          <td><%= link_to 'Edit', edit_list_item_path(@list, task) %></td>
          <td><%= link_to 'Destroy', list_item_path(@list, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br/>

  <%= link_to 'New Task', new_list_item_path(@list, @list.items.build), class: "btn btn-primary" %>
</div>