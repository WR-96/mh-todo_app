<div class="container">
  <h1>Lists</h1>

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @lists.each do |list| %>
        <tr>
          <td><%= list.name %></td>
          <td><%= link_to 'Show', list %></td>
          <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New List', new_list_path, class: "btn btn-primary" %>

  <br>

  <p>
    Download:
    <%= link_to "CSV", lists_path(format: "csv") %> |
    <%= link_to "PDF", lists_path(format: "pdf"), target: :_blank %>
  </p>
</div>